<?xml version="1.0"?>
<openerp>
    <data>
        <!-- TODO: put here a reminder on what to do at the first edition -->
        <record id="hon_issue_tree_view" model="ir.ui.view">
            <field name="name">hon.tree.view</field>
            <field name="model">hon.issue</field>
            <field name="view_type">tree</field>
            <field name="arch" type="xml">
                <tree string="Hon Issues">
                    <field name="state" invisible="1"/>
                    <field name="main_account_analytic_id"/>
                </tree>
            </field>
        </record>

        <record id="hon_issue_form" model="ir.ui.view">
            <field name="name">hon_issue.form</field>
            <field name="model">hon.issue</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <form string="Hon Issue" version="7.0">
                    <sheet string="Hon Issue">
                        <group>
                            <group>
                                <field name="state" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                                <field name="main_account_analytic_id" on_change="onchange_main_analytic_ac(main_account_analytic_id, context)"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Honorarium Lines">
                                <field name="hon_line">
                                    <tree string="Hon lines" editable="bottom">
                                        <field name="company_id" invisible="1"/>
                                        <field name="sequence" widget="handle" />
                                        <field name="page_number"/>
                                        <field name="name"/>
                                        <field name="nr_of_columns"/>
                                        <field name="partner_id" required="True"/>
                                        <field name="account_analytic_id" string="Redactie" required="True"/>
                                        <field name="product_category_id" required="True"/>
                                        <field name="product_id" on_change="product_id_change(parent.main_account_analytic_id, product_id, partner_id, price_unit, context, parent.company_id)"
                                               domain="[('categ_id', '=', product_category_id)]"/>
                                        <field name="account_id" />
                                        <field name="price_unit"/>
                                        <field name="quantity" />
                                        <field name="price_subtotal"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Other Info">
                                <div class="oe_clear">
                                    <label for="comment"/>
                                </div>
                                <field name="comment"/>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

