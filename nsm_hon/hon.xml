<?xml version="1.0"?>
<openerp>
    <data>
        <!-- TODO: put here a reminder on what to do at the first edition -->
        <record id="hon_issue_tree_view" model="ir.ui.view">
            <field name="name">hon.tree.view</field>
            <field name="model">hon.issue</field>
            <field name="view_type">tree</field>
            <field name="arch" type="xml">
                <tree string="Hon Issues">
                    <field name="state" invisible="1"/>
                    <field name="account_analytic_id"/>
                </tree>
            </field>
        </record>

        <record id="hon_issue_form" model="ir.ui.view">
            <field name="name">hon_issue.form</field>
            <field name="model">hon.issue</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <form string="Hon Issue" version="7.0">
                    <header>
                        <button name="issue_confirm" states="draft" string="Confirm Hon Issue" type="workflow" groups="base.group_user"/>
                        <button name="action_view_invoice" string="View Invoice" type="object" class="oe_highlight" attrs="{'invisible': [('invoice_exists', '=', False)]}" groups="base.group_user"/>
                        <button name="%(action_view_hon_issue_line_make_invoice)d" string="Create Invoices" type="action" states="open" class="oe_highlight" groups="base.group_user"/>
                        <button name="cancel" states="draft,open" string="Cancel Issue" groups="base.group_user"/>
                        <button name="back_draft" states="open" string="back to Draft" type="workflow" groups="base.group_user"/>
                        <!--button name="invoice_cancel" states="invoice_except" string="Cancel Issue" groups="base.group_user"/-->
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,manual,done" statusbar_colors='{"draft":"blue", "open":"red","manual":"blue"}'/>
                    </header>

                    <h1>
                        <!--label string="Quotation " attrs="{'invisible': [('state','not in',('draft','sent'))]}"/-->
                        <label string="Honoraria Editie " />
                        <field name="name" class="oe_inline" readonly="0"/>
                    </h1>
                    <!--sheet string="Hon Issue"-->
                        <group>
                            <group col="2" colspan="2" >
                                <field name="company_id" invisible="1"/>
                                <field name="account_analytic_id"  on_change="onchange_analytic_ac(account_analytic_id, context)"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Honorarium Issue Lines">
                                <field name="hon_issue_line">
                                    <tree string="Hon Issue lines" editable="bottom">
                                        <field name="company_id" invisible="1"/>
                                        <field name="sequence" widget="handle" />
                                        <field name="page_number"/>
                                        <field name="name"/>
                                        <field name="nr_of_columns"/>
                                        <field name="partner_id" required="True" on_change="partner_id_change(partner_id, context )"/>
                                        <field name="employee" invisible="1"/>
                                        <field name="account_analytic_id" invisible="1"/>
                                        <field name="activity_id" invisible="0" required="True" domain="[('project_ids', 'in', parent.account_analytic_id)]"/>
                                        <field name="product_category_id" required="True"/>
                                        <field name="product_id" on_change="product_id_change(product_id, partner_id, price_unit, context )"
                                               domain="[('categ_id', '=', product_category_id)]"/>
                                        <field name="account_id" invisible="1"/>
                                        <field name="price_unit" attrs="{'invisible': [('employee','=',True)]}"/>
                                        <field name="quantity" attrs="{'invisible': [('employee','=',True)]}"/>
                                        <field name="price_subtotal" attrs="{'invisible': [('employee','=',True)]}"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Other Info">
                                <div class="oe_clear">
                                    <label for="comment"/>
                                </div>
                                <field name="comment"/>
                                <group>
                                    <field name="invoiced"/>
                                    <field name="invoice_exists" invisible="1"/>
                                </group>
                            </page>

                        </notebook>
                    <!--/sheet-->
                </form>
            </field>
        </record>

