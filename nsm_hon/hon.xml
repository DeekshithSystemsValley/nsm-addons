<?xml version="1.0"?>
<openerp>
    <data>
        <!-- TODO: put here a reminder on what to do at the first edition -->
        <record id="hon_issue_tree_view" model="ir.ui.view">
            <field name="name">hon.tree.view</field>
            <field name="model">hon.issue</field>
            <field name="view_type">tree</field>
            <field name="arch" type="xml">
                <tree string="Hon Issues">
                    <field name="account_analytic_id"/>
                    <field name="state" invisible="0"/>
                </tree>
            </field>
        </record>

        <record id="hon_issue_form" model="ir.ui.view">
            <field name="name">hon_issue.form</field>
            <field name="model">hon.issue</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <form string="Hon Issue" version="7.0">
                    <header>
                        <button name="issue_confirm" states="draft" string="Confirm Hon Issue" type="workflow" groups="base.group_user"/>
                        <button name="action_view_invoice" string="View Invoice" type="object" class="oe_highlight" attrs="{'invisible': [('invoice_exists', '=', False)]}" groups="base.group_user"/>
                        <button name="manual_invoice" string="Create Invoices" type="action" states="open" class="oe_highlight" groups="base.group_user"/>
                        <button name="cancel" states="draft,open" string="Cancel Issue" groups="base.group_user"/>
                        <button name="back_draft" states="open" string="back to Draft" type="workflow" groups="base.group_user"/>
                        <button name="invoice_cancel" states="open,manual" string="Cancel Issue" groups="base.group_user"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,manual,done" statusbar_colors='{"draft":"blue", "open":"red","manual":"blue"}'/>
                    </header>

                    <h1>
                        <label string="Honoraria Editie " />
                        <field name="name" class="oe_inline" readonly="1"/>
                    </h1>
                    <!--sheet string="Hon Issue"-->
                        <group>
                            <group col="2" colspan="2" >
                                <field name="company_id" invisible="1"/>
                                <field name="account_analytic_id"  on_change="onchange_analytic_ac(account_analytic_id, context)"/>
                                <field name="date_publish"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Honorarium Issue Lines">
                                <field name="hon_issue_line">
                                    <tree string="Hon Issue lines" editable="bottom">
                                        <field name="company_id" invisible="1"/>
                                        <field name="sequence" widget="handle" />
                                        <field name="partner_id" required="True" on_change="partner_id_change(partner_id, context )"/>
                                        <field name="product_category_id" required="True" domain="['|',('id', '=',  %(nsm_hon.hon_categoryT)d),('id', '=',  %(nsm_hon.hon_categoryB)d)]"/>
                                        <field name="page_number"/>
                                        <field name="activity_id" invisible="0" required="True" />
                                        <field name="product_id" on_change="product_id_change(product_id, partner_id, price_unit, context )"
                                               domain="[('categ_id', '=', product_category_id)]"/>
                                        <field name="quantity" on_change="price_quantity_change(partner_id, price_unit, quantity, price_subtotal, context )" attrs="{'invisible': [('employee','=',True)]}"/>
                                        <field name="nr_of_columns"/>
                                        <field name="employee" invisible="1"/>
                                        <field name="account_analytic_id" invisible="1"/>
                                        <field name="parent_analytic_id" invisible="1"/>
                                        <field name="account_id" invisible="1"/>
                                        <field name="price_unit" on_change="price_quantity_change(partner_id, price_unit, quantity, price_subtotal, context )" attrs="{'invisible': [('employee','=',True)]}"/>
                                        <field name="name"/>
                                        <field name="estimated_price" attrs="{'invisible': [('employee','=',True)]}"/>
                                        <field name="price_subtotal" attrs="{'invisible': [('employee','=',True)]}"/>
                                        <field name="invoice_id" attrs="{'invisible': [('employee','=',True)]}"/>
                                    </tree>
                                </field>
                            </page>


                            <page string="Other Info">
                                <div class="oe_clear">
                                    <label for="comment"/>
                                </div>
                                <field name="comment"/>
                                <group>
                                    <field name="invoiced"/>
                                    <field name="invoice_exists" invisible="1"/>
                                </group>
                            </page>

                        </notebook>
                    <!--/sheet-->
                </form>
            </field>
        </record>

        <record id="view_hon_issue_filter" model="ir.ui.view">
            <field name="name">hon.issue</field>
            <field name="model">hon.issue</field>
            <field name="arch" type="xml">
                <search string="Search Issue">
                    <field name="account_analytic_id" string="Issue" filter_domain="[ ('account_analytic_id','ilike',self)]"/>
                    <filter name="state" string="State" domain="[('state','=','draft')]" help="Draft issues"/>
                    <filter name="state" string="State" domain="[('state','=','open')]" help="Confirmed issues"/>
                    <filter name="state" string="State" domain="[('state','=','manual')]" help="Invoiced issues"/>
                    <separator/>
                    <field name="account_analytic_id" operator="child_of"/>
                    <separator/>
                    <group expand="0" string="Group By">
                    	<filter name="group_by_debtor" string="Debtor" context="{'group_by':'zpartner'}"/>
                        <filter name="group_by_batchcode" string="Batchcode" context="{'group_by':'batchcode'}"/>
                    <separator/>
                    </group>
               </search>
            </field>
        </record>

        <record id="hon_issue_line_tree_view" model="ir.ui.view">
            <field name="name">hon.line.tree.view</field>
            <field name="model">hon.issue.line</field>
            <field name="view_type">tree</field>
            <field name="arch" type="xml">
                <tree string="Hon Issue Lines"  create="false">
                    <field name="account_analytic_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="page_number"/>
                    <field name="name"/>
                    <field name="nr_of_columns"/>
                    <field name="partner_id" />
                    <field name="employee" invisible="1"/>
                    <field name="activity_id" invisible="0" />
                    <field name="product_category_id" />
                    <field name="product_id"/>
                    <field name="account_id" invisible="1"/>
                    <field name="price_unit" attrs="{'invisible': [('employee','=',True)]}"/>
                    <field name="quantity" attrs="{'invisible': [('employee','=',True)]}"/>
                    <field name="estimated_price" attrs="{'invisible': [('employee','=',True)]}"/>
                    <field name="price_subtotal" attrs="{'invisible': [('employee','=',True)]}"/>
                    <field name="invoice_id"/>
                    <field name="state" invisible="0"/>
                </tree>
            </field>
        </record>

        <record id="view_hon_issue_line_filter" model="ir.ui.view">
            <field name="name">hon.issue.line</field>
            <field name="model">hon.issue.line</field>
            <field name="arch" type="xml">
                <search string="Search Issue Lines">
                    <field name="account_analytic_id" string="Issue" filter_domain="[ ('account_analytic_id','ilike',self)]"/>
                    <field name="partner_id" />
                    <field name="activity_id" />
                    <field name="product_category_id" />
                    <filter name="state" string="Draft" domain="[('state','=','draft')]" help="Draft issues"/>
                    <filter name="state" string="Confirmed" domain="[('state','=','confirmed')]" help="Confirmed issues"/>
                    <filter name="state" string="Invoiced" domain="[('state','=','invoiced')]" help="Invoiced issues"/>
                    <separator/>
                    <field name="account_analytic_id" operator="child_of"/>
                    <separator/>
                    <group expand="0" string="Group By">
                    	<filter name="group_by_issue" string="Issue" context="{'group_by':'account_analytic_id'}"/>
                        <filter name="group_by_product_category_id" string="Page Type" context="{'group_by':'product_category_id'}"/>
                        <filter name="group_by_activity_id" string="Activity" context="{'group_by':'activity_id'}"/>
                        <filter name="group_by_partner" string="Partner" context="{'group_by':'partner_id'}"/>
                    <separator/>
                    </group>
               </search>
            </field>
        </record>

        <record id="action_hon_issue" model="ir.actions.act_window">
            <field name="name">Hon Issues</field>
            <field name="res_model">hon.issue</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
            <field name="search_view_id" ref="view_hon_issue_filter"/>
        </record>

        <record id="action_hon_issue_line" model="ir.actions.act_window">
            <field name="name">Hon Issue lines</field>
            <field name="res_model">hon.issue.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
            <field name="search_view_id" ref="view_hon_issue_line_filter"/>
        </record>

        <record id="action_hon_issue_view" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="action_hon_issue"/>
        </record>

        <record id="action_hon_issue_view1" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hon_issue_form"/>
            <field name="act_window_id" ref="action_hon_issue"/>
        </record>

        <menuitem name="Hon"
                  id="menu_action_hon_main"
                  sequence="20"
                  groups="nsm_hon.group_module_hon_user"
                  />
        <menuitem name="Hon"
                  id="menu_action_hon"
                  parent="menu_action_hon_main"
                  sequence="10"
                  groups="nsm_hon.group_module_hon_user"
                  />
        <menuitem action="action_hon_issue"
                  name="Hon Issues"
                  id="menu_action_hon_detail"
                  parent="menu_action_hon"
                  sequence="1"
                  groups="nsm_hon.group_module_hon_user"
                  />


        <record id="action_invoice_tree_hon" model="ir.actions.act_window">
            <field name="name">HON Invoices</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar,graph</field>
            <field eval="False" name="view_id"/>
            <field name="domain">[('type','=','in_invoice'),('hon','=',True)]</field>
            <field name="context">{'default_type': 'in_invoice', 'type': 'in_invoice', 'journal_type': 'purchase'}</field>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to record a new supplier invoice.
              </p><p>
                You can control the invoice from your supplier according to
                what you purchased or received. OpenERP can also generate
                draft invoices automatically from purchase orders or receipts.
              </p>
            </field>
        </record>
        <menuitem action="action_invoice_tree_hon"
                  name="Hon Invoices"
                  id="menu_action_invoice_tree"
                  parent="menu_action_hon"
                  sequence="1"
                  groups="nsm_hon.group_module_hon_user"
                  />

        <menuitem action="action_hon_issue_line"
                  name="Hon Issue Lines"
                  id="menu_action_issue_line_tree"
                  parent="menu_action_hon"
                  sequence="1"
                  groups="nsm_hon.group_module_hon_user"
                  />

    </data>
</openerp>
