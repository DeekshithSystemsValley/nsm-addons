<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="invoice_supplier_form_NSM_HON" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.NSM_HON</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="nsm_supportal_extension.invoice_supplier_form_NSM_ext"/>
            <field name="arch" type="xml">
                <data>
                        <button name="invoice_open" position="before">
                            <button name="action_invoice_sent" type="object" string="Send by Email" attrs="{'invisible':['|','|',('sent','=',True), ('hon','!=',True),('state', '!=', 'open')]}" class="oe_highlight" groups="nsm_hon.group_module_hon_user"/>
                            <button name="invoice_print" string="Print" type="object" attrs="{'invisible':['|','|',('sent','=',True), ('hon','!=',True),('state', '!=', 'open')]}" class="oe_highlight" groups="nsm_hon.group_module_hon_user"/>
                            <button name="action_invoice_sent" type="object" string="Send by Email" attrs="{'invisible':['|','|',('hon','!=',True),('sent','=',False), ('state', '!=', 'open')]}" groups="nsm_hon.group_module_hon_user"/>
                            <button name="invoice_print" string="Print Invoice" type="object" attrs="{'invisible':['|','|',('hon','!=',True),('sent','=',False), ('state', '!=', 'open')]}" groups="nsm_hon.group_module_hon_user"/>
                            <field name="sent" invisible="1"/>
                            <field name="hon" invisible="1"/>
                        </button>
                </data>
            </field>
        </record>

    </data>
</openerp>
