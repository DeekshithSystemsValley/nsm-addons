<odoo>
  <data>
      <record id="view_nsm_crm_res_partner_form2" model="ir.ui.view">
            <field name="name">res.partner.nsm.crm.form</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="aprofit_id"/>
                </xpath>
            </field>
      </record>

      <record id="nsm_view_partner_tree" model="ir.ui.view">
            <field name="name">res.partner.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                    <field name="display_name" string="Name" position="attributes">
                                <attribute name="invisible">1</attribute>
                    </field>
                    <field name="display_name" position="after">
                        <field name="ref"/>
                        <field name="lastname"/>
                        <field name="city"/>
                        <field name="country_id"/>
                    </field>
                    <field name="email" position="after">
                        <field name="sector_id"/>
                        <field name="is_company"/>
                        <field name="parent_id"/>
                        <field name="firstname"/>
                        <field name="function"/>
                        <field name="user_id"/>
                    </field>
            </field>
        </record>

  </data>
</odoo>