<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">


        <!-- Expense-related subtypes for messaging / Chatter -->
        <record id="hr_expense.mt_expense_approved" model="mail.message.subtype">
            <field name="name">Approved</field>
            <field name="res_model">hr.expense.expense</field>
            <field name="description">Expense approved</field>
        </record>
        <record id="hr_expense.mt_expense_refused" model="mail.message.subtype">
            <field name="name">Refused</field>
            <field name="res_model">hr.expense.expense</field>
            <field name="description">Expense refused</field>
        </record>
        <record id="hr_expense.mt_expense_confirmed" model="mail.message.subtype">
            <field name="name">To Approve</field>
            <field name="res_model">hr.expense.expense</field>
            <field name="description">Expense confirmed, waiting confirmation</field>
        </record>

    </data>
</openerp>