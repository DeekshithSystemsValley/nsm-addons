<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Workflow definition -->
        
        
        <record id="act_paid" model="workflow.activity">
            <field name="wkf_id" ref="hr_expense.wkf_expenses"/>
            <field name="name">paid</field>
            <field name="kind">function</field>
            <field name="action">write({'state': 'paid'})</field>
            <!--field name="signal_send">subflow.paid</field-->
        </record>

        <record id="act_re-done" model="workflow.activity" >
            <field name="wkf_id" ref="hr_expense.wkf_expenses"/>
            <field name="name">re-done</field>
            <field name="action">expense_redone()</field>
            <field name="kind">function</field>
        </record>

        <record id="hr_expense.act_refused" model="workflow.activity">
            <field name="wkf_id" ref="hr_expense.wkf_expenses"/>
            <field name="name">refused</field>
            <field name="kind">function</field>
            <field name="action">expense_redone()
                expense_canceled()</field>
        </record>

        <record id="hr_expense.t2" model="workflow.transition">
            <field name="act_from" ref="hr_expense.act_confirm"/>
            <field name="act_to" ref="hr_expense.act_done"/>
            <field name="signal">done</field>
            <field name="group_id" ref=""/>
        </record>
         
         <record id="hr_expense.t4" model="workflow.transition">
            <field name="act_from" ref="hr_expense.act_done"/>
            <field name="act_to" ref="hr_expense.act_refused"/>
            <field name="signal">refuse</field>
            <field name="group_id" ref=""/>
        </record>

        <record id="t5" model="workflow.transition">
            <field name="act_from" ref="act_re-done"/>
            <field name="act_to" ref="hr_expense.act_refused"/>
            <field name="signal">refuse</field>
            <field name="group_id" ref=""/>
        </record>

        <record id="hr_expense.t6" model="workflow.transition">
            <field name="act_from" ref="hr_expense.act_accepted"/>
            <field name="act_to" ref="act_re-done"/>
            <field name="signal">re-done</field>
            <field name="group_id" ref=""/>
        </record>


        <record id="hr_expense.t7" model="workflow.transition">
            <field name="act_from" ref="hr_expense.act_confirm"/>
            <field name="act_to" ref="hr_expense.act_draft"/>
            <field name="signal">draft</field>
            <field name="group_id" ref=""/>
        </record>

        <record id="hr_expense.t8" model="workflow.transition">
            <field name="act_from" ref="hr_expense.act_done"/>
            <field name="act_to" ref="hr_expense.act_accepted"/>
            <field name="signal">validate</field>
            <field name="group_id" ref=""/>
        </record>

        <record id="t12" model="workflow.transition">
            <field name="act_from" ref="act_re-done"/>
            <field name="act_to" ref="hr_expense.act_accepted"/>
            <field name="signal">validate</field>
            <field name="group_id" ref=""/>
        </record>


        <record id="t9" model="workflow.transition">
            <field name="act_from" ref="hr_expense.act_accepted"/>
            <field name="act_to" ref="hr_expense.act_refused"/>
            <field name="signal">refuse</field>
            <field name="group_id" ref=""/>
        </record>

        <record id="hr_expenset10" model="workflow.transition">
            <field name="act_from" ref="hr_expense.act_refused"/>
            <field name="act_to" ref="hr_expense.act_draft"/>
            <field name="signal">draft</field>
            <field name="group_id" ref=""/>
        </record>

        <record id="t11" model="workflow.transition">
            <field name="act_from" ref="hr_expense.act_accepted"/>
            <field name="act_to" ref="act_paid"/>
            <field name="trigger_model">account.move.line</field>
            <field name="trigger_expr_id">move_line_id_payment_get()</field>
            <field name="condition">test_paid()</field>
        </record>

    </data>
</openerp>
