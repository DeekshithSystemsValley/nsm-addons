<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Workflow definition -->
        
        
        <record id="act_paid" model="workflow.activity">
            <field name="wkf_id" ref="hr_expense.wkf_expenses"/>
            <field name="name">paid</field>
            <field name="kind">function</field>
            <field name="action">write({'state': 'paid'})</field>
            <!--field name="signal_send">subflow.paid</field-->
        </record>

        <record id="t9" model="workflow.transition">
            <field name="act_from" ref="hr_expense.act_accepted"/>
            <field name="act_to" ref="act_paid"/>
            <field name="trigger_model">account.move.line</field>
            <field name="trigger_expr_id">move_line_id_payment_get()</field>
            <field name="condition">test_paid()</field>
        </record>
        
         <record id="hr_expense.t2" model="workflow.transition">
            <field name="act_from" ref="hr_expense.act_confirm"/>
            <field name="act_to" ref="hr_expense.act_done"/>
            <field name="signal">done</field>
            <field name="group_id" ref="account.group_account_invoice"/>
        </record>
         
         <record id="hr_expense.t4" model="workflow.transition">
            <field name="act_from" ref="hr_expense.act_confirm"/>
            <field name="act_to" ref="hr_expense.act_refused"/>
            <field name="signal">refuse</field>
            <field name="group_id" ref="account.group_account_invoice"/>
        </record>

