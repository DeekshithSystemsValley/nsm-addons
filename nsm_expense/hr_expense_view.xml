<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Expenses -->


        <record id="view_expenses_tree_nsm" model="ir.ui.view">
            <field name="name">hr.expense.expense.tree.nsm</field>
            <field name="model">hr.expense.expense</field>
            <field name="inherit_id" ref="hr_expense.view_expenses_tree"/>
            <field name="arch" type="xml">
                <data>
                    <field name="employee_id" position="after">
                           <field name="account_move_id" string="Boekstuknummer"/>
                    </field>
                    <field name="department_id" position="replace" >
                        <field name="department_id" invisible="0"/>
                    </field>
                    <field name="user_id" position="replace">
                        <field name="user_id" invisible="0"/>
                    </field>
                </data>
            </field>
        </record>

        <record id="view_expenses_form" model="ir.ui.view">
            <field name="name">hr.expense.form.nsm</field>
            <field name="model">hr.expense.expense</field>
            <field name="inherit_id" ref="hr_expense.view_expenses_form"/>
            <field name="arch" type="xml">
                <data>
                <xpath expr="//form/header/button[@name='confirm']" position="attributes">
                    <attribute name="string">Submit</attribute>
                </xpath>
                <xpath expr="//form/header/button[@name='validate']" position="attributes">
                    <attribute name="states" >done</attribute>
                    <attribute name="groups" >base.group_hr_user,account.group_account_invoice</attribute>
                </xpath>
                <xpath expr="//form/header/button[@name='refuse']" position="attributes">
                    <attribute name="states" >done</attribute>
                    <attribute name="groups" >base.group_hr_user,account.group_account_invoice</attribute>
                </xpath>
                <xpath expr="//form/header/button[@name='draft']" position="attributes">
                    <attribute name="groups" >account.group_account_invoice</attribute>
                </xpath>
                <xpath expr="//form/header/button[@name='done']" position="attributes">
                    <attribute name="states" >confirm</attribute>
                    <attribute name="groups" >account.group_account_invoice</attribute>
                </xpath>
                <xpath expr="//form/header/button[@name='done']" position="after">
                    <button name="re-done" states="accepted" string="Terug Boekhouding" type="workflow" groups="base.group_hr_user,account.group_account_invoice" class="oe_highlight"/>
                </xpath>
                <xpath expr="//form/header/button[@name='action_expense_cancel']" position="replace">
                </xpath>
                <xpath expr="//form/header/button[@name='action_view_receipt']" position="attributes">
                    <attribute name="states" >done,accepted,paid</attribute>
                    <attribute name="groups" >account.group_account_invoice</attribute>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='product_id']" position="replace">
                        <field name="product_id" on_change="onchange_product_id(product_id, context)" context="{'default_hr_expense_ok':1}" required="1"/>    
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='analytic_account']" position="replace">
                        <field name="analytic_account" domain="[('type','in',['normal','contract'])]" groups="analytic.group_analytic_accounting" required="1"/>    
                </xpath>
                </data>
            </field>
        </record>


        <record id="view_hr_expense_filter_nsm" model="ir.ui.view">
            <field name="name">hr.expense.expense.filter.nsm</field>
            <field name="model">hr.expense.expense</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search/filter[@string='New']" position="replace">
			        <filter name="draft" string="New" domain="[('state','=','draft')]" help="New Expense"/>
                    <filter name="cancelled" string="Refused" domain="[('state','=','cancelled')]" help="Refused"/>
                </xpath>
		        <xpath expr="//search/filter[@string='To Approve']" position="replace">
			        <filter name="confirm" string="Waiting Finance" domain="[('state','=','confirm')]" help="Waiting Finance"/>
		        </xpath>
		        <xpath expr="//search/filter[@string='To Pay']" position="replace">
                    <filter name="done" string="Waiting Approval" domain="[('state','=','done')]" help="Waiting Approval"/>
                    <filter name="accepted" string="Waiting Payment" domain="[('state','=','accepted')]" help="Waiting Payment"/>
                    <filter name="paid" string="Paid" domain="[('state','=','paid')]" help="Paid"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
