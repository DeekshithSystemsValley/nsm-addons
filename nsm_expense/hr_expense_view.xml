        <record id="view_expenses_form" model="ir.ui.view">
            <field name="name">hr.expense.form.nsm</field>
            <field name="model">hr.expense.expense</field>
            <field name="inherit_id" ref="hr_expense.view_expenses_form"/>
            <field name="arch" type="xml">
                <data>
                <button name="confirm" position="replace">
                    <button name="confirm"  states="draft" string="Submit" type="workflow" class="oe_highlight"/>
                </button>
                <button name="validate" position="replace">
                    <button name="validate" states="done" string="Approve" type="workflow" groups="base.group_hr_user,account.group_account_invoice" class="oe_highlight"/>
                </button>
                <button name="refuse" position="replace">
                    <button name="refuse" states="done" string="Refuse" type="workflow" groups="base.group_hr_user,account.group_account_invoice" />
                </button>
                <button name="draft" position="replace">
                    <button name="draft" states="confirm,cancelled" string="Set to Draft" type="workflow" groups="account.group_account_invoice" />
                </button>
                <button name="done" position="replace">
                    <button name="done" states="confirm" string="Generate Accounting Entries" type="workflow" groups="account.group_account_invoice" class="oe_highlight"/>
                    <button name="re-done" states="accepted" string="Terug Boekhouding" type="workflow" groups="base.group_hr_user,account.group_account_invoice" class="oe_highlight"/>
                </button>
                <button name="action_expense_cancel" position="replace"/>
                <button name="action_view_receipt" position="replace">
                    <button name="action_view_receipt" states="done,accepted,paid" string="Open Accounting Entries" type="object" groups="account.group_account_invoice"/>
                </button>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='product_id']" position="replace">
                        <field name="product_id"  context="{'default_hr_expense_ok':1}" required="1"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='analytic_account']" position="replace">
                        <field name="analytic_account" domain="[('type','in',['normal','contract'])]" groups="analytic.group_analytic_accounting" required="1"/>    
                </xpath>
                <xpath expr="//page[@string='Accounting']/group/group/field[@name='voucher_id']" position="after">
                         <field name="date_confirm" groups="account.group_account_invoice" />
                </xpath>
                </data>
            </field>
        </record>


        <record id="view_hr_expense_filter_nsm" model="ir.ui.view">
            <field name="name">hr.expense.expense.filter.nsm</field>
            <field name="model">hr.expense.expense</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search/filter[@string='New']" position="replace">
			        <filter name="draft" string="New" domain="[('state','=','draft')]" help="New Expense"/>
                    <filter name="cancelled" string="Refused" domain="[('state','=','cancelled')]" help="Refused"/>
                </xpath>
		        <xpath expr="//search/filter[@string='To Approve']" position="replace">
			        <filter name="confirm" string="Waiting Finance" domain="[('state','=','confirm')]" help="Waiting Finance"/>
		        </xpath>
		        <xpath expr="//search/filter[@string='To Pay']" position="replace">
                    <filter name="done" string="Waiting Approval" domain="[('state','=','done')]" help="Waiting Approval"/>
                    <filter name="accepted" string="Waiting Payment" domain="[('state','=','accepted')]" help="Waiting Payment"/>
                    <filter name="paid" string="Paid" domain="[('state','=','paid')]" help="Paid"/>
                </xpath>
