<?xml version="1.0" ?>
<openerp>
    <data noupdate="1">
        <record id="property_rule_expense_manager" model="ir.rule">
            <field name="name">Manager Expense</field>
            <field model="ir.model" name="model_id" ref="hr_expense.model_hr_expense_expense"/>
            <field name="domain_force">['|','|',('department_id.manager_id.user_id','=',user.id),('employee_id.parent_id.user_id','=',user.id),('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('base.group_hr_user'))]"/>
        </record>
        <record id="property_rule_expense_product_tax" model="ir.rule">
            <field name="name">Product Tax</field>
            <field model="ir.model" name="model_id" ref="hr_expense.model_product_product"/>
            <field name="domain_force">[('supplier_taxes_id','=', False)]</field>
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
        </record>
        <record id="property_rule_expense_product_tax_accounting" model="ir.rule">
            <field name="name">Product Tax Accounting</field>
            <field model="ir.model" name="model_id" ref="hr_expense.model_product_product"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('account.group_account_invoice'))]"/>
        </record>
    </data>
</openerp>
