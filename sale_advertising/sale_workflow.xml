<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="wkf_sale" model="workflow">
            <field name="name">sale.order.basic</field>
            <field name="osv">sale.order</field>
            <field name="on_create">True</field>
        </record>

        <!-- Activity -->
